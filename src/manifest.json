{
  "background": {
    "scripts": [
      "js/background.js"
    ],
    "persistent": false
  },
  "browser_action": {
    "browser_style": true,
    "default_icon": "icons/icon.svg",
    "default_popup": "popup.html",
    "default_title": "__MSG_extName__"
  },
  "content_scripts": [{
    "matches": ["*://*.netflix.com/*"],
    "js": ["js/content-script.js"]
  }],
  "default_locale": "en",
  "description": "IFTTT for Home Assistant",
  "homepage_url": "http://localhost:8080/",
  "icons": {
    "48": "icons/48.png",
    "96": "icons/96.png"
  },
  "manifest_version": 2,
  "name": "__MSG_extName__",
  "permissions": [
    "activeTab",
    "<all_urls>",
    "*://*/*",
    "storage"
  ],
  "options_ui": {
    "page": "options.html",
    "browser_style": true
  }
}
